/**index.wxss**/
page{
  background: #F5F5F5;
}
.box{
  width: 90%;
  margin: 0 auto;
}
.list{
  width: 100%;
  margin-bottom: 40rpx;
}
.img_box{
  position: relative;
}
.img_box image{
  width: 100%;
}
.message{
  position: absolute;
  top:37%;
  color: #fff;
  font-size: 32rpx;
}
.name{
  margin: 0 30rpx;
}
.type{
  font-size: 64rpx;
  position: absolute;
  right: 5%;
  color: #fff;
  top: 12%;

}
.con{
  width: 100%;
  background: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding: 32rpx;
  box-sizing: border-box;
}
.con text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(100,100,100,1);
}
.con text.address{
  color: #000000;
}
.lis{
  margin-bottom: 32rpx;
}
.now{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  background:rgba(0,96,253,1);
  box-shadow:0px 6px 12px rgba(0,96,253,0.3);
  border-radius:25px;
  color: #fff;
  text-align: center
}
.yes{
  background:rgba(253,172,10,1);
}
/* 浮层 */
.flow{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}
.fade{
  width: 80%;
  margin:0 auto;
  background: #fff;
  border-radius: 20rpx;
  text-align: center;
  padding: 60rpx 0;
  margin-top: 20%;
}
.fade image{
  width: 378rpx;
  margin:0 auto;
}
.fade text{
  font-size:36rpx;
  display: block;
  color:rgba(0,0,0,1);
}
.yes{
  width:320rpx;
  height:80rpx;
  line-height: 80rpx;
  background:rgba(0,96,253,1);
  box-shadow:0px 6px 12px rgba(0,96,253,0.3);
  border-radius:20px;
  color: #fff;
  margin:0 auto;
  margin-top: 20%;
}
.fade .order{
  font-size:32rpx;
  color:rgba(100,100,100,1);
}
.fade .pity{
  margin:30rpx 0;
}