/* pages/login/login.wxss */
.login{
  padding: 0 64rpx;
  box-sizing: border-box;
}
.disembark{
  font-size:64rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
  z-index: 99;
}
.text{
  margin-top: 100rpx;
}
.line{
  width:128rpx;
  height:16rpx;
  background:rgba(74,143,246,1);
  margin-top: -12rpx;
}
.slogan{
  font-size:32rpx;
  font-weight:500;
  color:rgba(100,100,100,1);
  margin-top: 16rpx;
}
/* 输入框 */
.login_box{
  width: 100%;
  margin-top: 120rpx;
}
.login_box input{
  width: 100%;
  border-bottom: 1px solid #E2E2E2;
  padding-bottom: 32rpx;
  margin-bottom: 52rpx;
  color: #C2C2C2;
}
.dl{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background:rgba(0,96,253,1);
  box-shadow:0px 6px 12px rgba(0,96,253,0.3);
  border-radius:25px;
  margin-top: 160rpx;
}