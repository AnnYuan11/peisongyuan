/* pages/task/task.wxss */

page {
  background: #f5f5f5;
}

.box {
  width: 90%;
  margin: 0 auto;
}

.swiper-tab {
  width: 100%;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 32rpx;
  display: inline-block;
  width: 25%;
  color: #9b9b9b;
  text-align: center;
}

.on {
  color: #000;
  font-weight:bold;
  height: 48rpx;
  border-bottom: 16rpx solid #4A8FF6;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
/* 列表 */
.lis{
  width: 100%;
  background: #fff;
  padding: 32rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 6px rgba(0,0,0,0.16);
  border-radius:10px;
  margin-top:32rpx;
}
.message{
  width: 100%;
  border-bottom: 1px solid #E2E2E2;
  padding-bottom: 32rpx;
  box-sizing: border-box;
}
.message text{
  font-size: 32rpx;
  color: #000;
}
.name{
  margin-right: 32rpx;
}
.con{
  padding-top: 32rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #E2E2E2;
}
.every{
  margin-bottom: 32rpx;
}
.every text{
  font-size:32rpx;
  font-weight:500;
  color:rgba(100,100,100,1);
}
.every .address{
  color: #000;
}
.btn{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top:32rpx;
}
.sure{
  width:260rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(0,96,253,1);
  border-radius:25px;
  color: #0060FD;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
}
.contact{
  width:260rpx;
  height:60rpx;
  background:rgba(0,96,253,1);
  box-shadow:0px 6px 12px rgba(0,96,253,0.3);
  border-radius:25px;
  color: #FFF;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
}
.lien{
  width: 20px;
  height: 10px;
  background: red
}